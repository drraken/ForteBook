@model IEnumerable<ForteBook.Models.User>
@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Users</h2>
<p>
    @Html.ActionLink("New User", "UserForm", "Users", null, new { @class = "btn btn-primary" })
</p>
<table id="users" class="table table-bordered table-hover">
       <thead>
           <tr>
               <th>Name</th>
               
           </tr>
       </thead>
       <tbody>
           @foreach (var user in Model)
            {       
                <tr>
                    <td>@Html.ActionLink((user.FirstName + " " + user.LastName), "Details", "Users", new { id = user.Id }, null)</td>
                </tr>
            }
       </tbody>
</table>