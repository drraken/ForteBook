@model IEnumerable<ForteBook.Models.User>
@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Users</h2>
<p>
    @Html.ActionLink("New User", "UserForm", "Users", null, new { @class = "btn btn-primary" })
</p>
<table id="users" class="table table-bordered table-hover">
       <thead>
           <tr>
               <th>Name</th>
               <th>Delete</th>
           </tr>
       </thead>
       <tbody>
           @foreach (var user in Model)
            {       
                <tr>
                    <td>@Html.ActionLink((user.FirstName + " " + user.LastName), "Details", "Users", new { id = user.Id }, null)</td>
                    <td>
                        <button data-user-id="@user.Id" class="btn-link js-delete">Delete</button>
                    </td>
                </tr>
            }
       </tbody>
</table>
@section scripts{
    <script>
        $(document).ready(function () {
            var table = $("#users").DataTable();

            $("#users").on("click", ".js-delete", function () {
                var button = $(this);
                bootbox.confirm("Are you sure yopu want to delete this user?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "/api/users/" + button.attr('data-user-id'),
                            method: "DELETE",
                            success: function () {
                                table.row(button.parents("tr")).remove().draw();
                            }
                        });
                    }
                });
            });
        });
    </script>    
}