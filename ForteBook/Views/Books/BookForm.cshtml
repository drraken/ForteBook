@model ForteBook.ViewModels.BookFormViewModel
@{
    /**/

    ViewBag.Title = Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>@Model.Title</h2>





@using (Html.BeginForm("Save", "Books"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Book.Name)
        @Html.TextBoxFor(m => m.Book.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Book.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Book.GenreTypeId)
        @Html.DropDownListFor(m => m.Book.GenreTypeId, new SelectList(Model.GenreTypes, "Id", "Name"), "Select Genre Type", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Book.GenreTypeId)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Book.Description)
        @Html.TextAreaFor(m => m.Book.Description, new { @class = "form-control", @rows = "6" })
        @Html.ValidationMessageFor(m => m.Book.Description)
    </div>


    @Html.HiddenFor(m => m.Book.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary ">Save</button>
}