@model IEnumerable<ForteBook.Models.Book>
@{
    ViewBag.Title = "Books";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Books</h2>
@if (!Model.Any())
{
    <p>We don't have any books yet.</p>
}
else
{
    
    @Html.ActionLink("New Book", "BookForm", "Books", null, new { @class = "btn btn-primary" })
    
    <table id="books" class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <td>@Html.ActionLink(book.Name, "Details", "Books", new { id = book.Id }, null)</td>
                </tr>
            }
        </tbody>
    </table>
}
